{
  "name": "prompt-manager",
  "displayName": "Prompt Manager",
  "description": "Manage and use prompt templates for AI interactions",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:prompt-manager.openPromptManager",
    "onView:promptLibrary"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prompt-manager.openPromptManager",
        "title": "Open Prompt Manager"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-manager",
          "title": "Prompt Manager",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "prompt-manager": [
        {
          "id": "promptLibrary",
          "name": "Prompt Library"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "setup": "node setup.js",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "lint": "eslint src --ext js"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}