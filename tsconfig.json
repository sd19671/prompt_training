{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["DOM", "ES2019"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", ".vscode-test"]
}